<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	    
    <EditText
        android:id = "@+id/nameTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inputType="text"
        android:hint="Card Name" />
    
    <EditText
        android:id = "@+id/expansionTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextBox"
        android:inputType="text"
        android:hint="Expansion" />
    
    <EditText
        android:id = "@+id/cardTypeTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expansionTextBox"
        android:inputType="text"
        android:hint="Card Types" />
    
    <EditText
        android:id = "@+id/cardTextTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTypeTextBox"
        android:inputType="textMultiLine"
        android:hint="Card Text" />

</RelativeLayout>
